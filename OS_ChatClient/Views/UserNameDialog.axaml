<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="OS_ChatLabAvalonia.NETCoreMVVMApp.Views.UserNameDialog"
        Title="Input your Name"
        WindowStartupLocation="CenterScreen" SystemDecorations="BorderOnly"
        Width="400"
        Height="300"
        >
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" HorizontalAlignment="Stretch" Text="{Binding  UserName,Mode=OneWayToSource}"/>  
              <Button Grid.Row="1" Command="{Binding OKCommand,Mode=OneWay}" HorizontalAlignment="Center" Content="Register NOW!!!"/>
                
        </Grid>
</Window>
